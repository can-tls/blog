- provide(:title, "Edit user")
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'shared/error_messages', object: f.object
      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :email
      = f.email_field :email, class: 'form-control'
      - if @user == current_user
        = f.label :password
        = f.password_field :password, class: 'form-control', required: true
      - if current_user.email == "talascan@googlemail.com"
        = f.label :role
        = f.text_field :role
      = f.submit "Save changes", class: "btn btn-primary"
    = form_for(@user, html: { class: 'directUpload',  data: { 'form-data' => (@s3_direct_post.fields),
    'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f|
      = f.label :avatar_url
      = f.file_field :avatar_url, class: 'field'
      = f.submit "change avatar", class: "btn btn-primary"
    .gravatar_edit
      = gravatar_for @user
      %a{:href => "http://gravatar.com/emails", :target => "_blank"} change