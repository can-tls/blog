<p>
    <h4><%= @micropost.titel %></h4><br>
    <%= @micropost.content %><hr/>
</p>
<%= render @micropost.comments %>
<% @tags.each do |t| %>
    <%= t.name %>
<% end %>
<h3> Add a Comment: </h3>
<%= render 'comments/form' %>
<% if micropost_from_current_user?(@micropost) %>
    <%= link_to "edit", edit_micropost_path %>
    <%= link_to "delete", micropost_path, method: :delete %>
<% end %>

