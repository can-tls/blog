
<div class="row">
    <div class="col-md-7">
    </div>
    <div class="col-md-5">
    <%= link_to "sort by author", microposts_path(:sort => "user_id"), :class=> "btn btn-primary btn-sm active", :role=> "button"  %>
    <%= link_to "sort by publish", microposts_path(:sort => "created_at"), :class=> "btn btn-primary btn-sm active", :role=> "button" %>
    <%= link_to "sort by update ", microposts_path(:sort => "updated_at"), :class=> "btn btn-primary btn-sm active", :role=> "button"  %>
</div>
<br>
<br>
<br>
</div>
    <% @microposts.each do |micropost| %>
        <%= gravatar_for micropost.user %>
        <div class="row">
        <div class="col-sm-8">
        <%= micropost.titel %>
        <%= micropost.content %>
        <%= link_to micropost.user do %>
            <%= micropost.user.name %>
        <% end %>
        </div>
        <div class="col-md-2">
            <% if micropost_from_current_user?(micropost) %>
                <%= link_to "edit", edit_micropost_path(micropost) %>
                <%= link_to "delete", micropost_path(micropost), method: :delete %>
            <% end %>
        </div>
        </div>
    <% end %>

