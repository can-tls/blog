%section.micropost_form
  = form_for(@micropost) do |f|
    - @tags.each do |tag|
      = check_box_tag 'tag[]', tag.id, checked = @micropost.tags.include?(tag)
      = h tag.name
    .field
      = f.text_area :titel, placeholder: "title...", required: true
    .field
      = f.text_area :content, placeholder: "Compose new micropost...", required: true
    = f.submit "Update", class: "btn btn-primary"